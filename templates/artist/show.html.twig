{% extends 'base.html.twig' %}

{% block title %}
	{{artist.artistName}}
{% endblock %}


{% block body %}
	


	<div class="pt-6">
		<div class="flex justify-end pr-10">
			<a href="{{ path('app_artist_index') }}" class="underline hover:text-teal-800">Voir tous les artistes</a>
		</div>

		<!-- Artist info -->
		<div class="mx-auto max-w-2xl px-4 pb-16 pt-10 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto,auto,1fr] lg:gap-x-8 lg:px-8 lg:pb-24 lg:pt-16">

			<div class="lg:col-span-2 lg:border-r lg:border-gray-200 lg:pr-8">
				<h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl">{{artist.artistName}}</h1>
				<div class="text-sm text-gray-500">
					{% for category in artist.categories %}
						#{{ category.name }}
					{% endfor %}
				</div>
			</div>

			<!-- Favorite Image -->
			<div class="mt-4 lg:row-span-3 lg:mt-0">
				<img src="{{asset('assets/uploads/artist_img/'~ artist.favoriteImage)}}" alt="Image favorite" height="150">
			</div>

			<div
				class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pb-16 lg:pr-8 lg:pt-6">
				<!-- Description and details -->
				<div>
					<div class="space-y-6">
						<p class="text-base text-gray-900">{{ artist.description }}</p>
					</div>
				</div>

				<div class="mt-10">
					<h3 class="text-sm font-medium text-gray-900">Contacts:</h3>

					<div class="mt-4">
						<ul role="list" class="list-disc space-y-2 pl-4 text-sm">
							{% if artist.email != null %}
								<li class="text-gray-400">
									<span class="text-gray-600">Email:
										<a href="mailto: {{ artist.email }}" class="underline hover:text-teal-800">{{ artist.email }}</a>
									</span>
								</li>
							{% endif %}
							{% if artist.telephone != null %}
								<li class="text-gray-400">
									<span class="text-gray-600">Téléphone:
										{{ artist.telephone }}
									</span>
								</li>
							{% endif %}
							{% if artist.websiteLink != null %}
								<li class="text-gray-400">
									<span class="text-gray-600 ">Site internet:
										<a href="{{ artist.websiteLink }}" target="_blank" class="underline hover:text-teal-800">{{ artist.websiteLink }}</a>
									</span>
								</li>
							{% endif %}
							{% if artist.facebookLink != null %}
								<li class="text-gray-400">
									<span class="text-gray-600">Facebook:
										<a href="{{ artist.facebookLink }}" target="_blank" class="underline hover:text-teal-800">{{ artist.facebookLink }}</a>
									</span>
								</li>
							{% endif %}
							{% if artist.instagramLink != null %}
								<li class="text-gray-400">
									<span class="text-gray-600">Instagram:
										<a href="{{ artist.instagramLink }}" target="_blank" class="underline hover:text-teal-800">{{ artist.instagramLink }}</a>
									</span>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>

				<div class="mt-10">
					<h2 class="text-sm font-medium text-gray-900">Evénements participés :</h2>
					<div class="mt-4 flex">
						{% for event in artist.events %}
							<div class="text-gray-600 font-semibold underline hover:text-teal-800 container">
								<a href="{{ path('app_event_show', {'id': event.id}) }}">{{ event.name }}</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

		<!--buttons-->
		<div class="flex justify-center space-x-4">
			{% if is_granted("ROLE_ADMIN") or app.user == artist.user %}
				<div class="flex justify-center my-2 rounded-md bg-teal-900 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600 mt-4">
					<a href="{{ path('app_artist_edit', {'id': artist.id}) }}">
					Modifier la fiche artiste</a>
				</div>
			{% endif %}	
			{% if is_granted("ROLE_ADMIN")  %}
				<div class="flex">
					{{ include('artist/_delete_form.html.twig') }}
				</div>
			{% endif %}
		</div>

		<!-- Image gallery -->
		<div class="mx-auto mt-6 max-w-2xl sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:gap-x-8 lg:px-8 ">
			{% for image in artist.artistImages %}
				<div class="aspect-h-4 aspect-w-3  overflow-hidden rounded-lg lg:block">
					<img src="{{asset('assets/uploads/artist_img/'~ image.fileName)}}" alt="{{image.fileName}}" class="h-full w-full object-cover object-center">
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}


