{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
    <h1>Liste des artistes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom d'artiste</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Site internet</th>
                <th>Facebook</th>
                <th>Instagram</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.artistName }}</td>
                <td>{{ artist.firstName }}</td>
                <td>{{ artist.lastName }}</td>
                <td>{{ artist.description }}</td>
                <td>{{ artist.email }}</td>
                <td>{{ artist.telephone }}</td>
                <td>{{ artist.websiteLink }}</td>
                <td>{{ artist.facebookLink }}</td>
                <td>{{ artist.instagramLink }}</td>
                <td>
                    <a href="{{ path('app_artist_show', {'id': artist.id}) }}">Afficher</a>
                    <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Aucun artiste trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_artist_new') }}">Créer une fiche Artiste</a>
{% endblock %}
