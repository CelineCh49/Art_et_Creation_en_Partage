<a href="{{path ('app_artist_show', {'id':artist.id})}}" title='{{artist.artistName}}' class="group">
    <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
        <img src="{{asset('assets/uploads/artist_img/'~ artist.favoriteImage)}}" alt="Image favorite" class="h-full w-full object-cover object-center group-hover:opacity-75">
    </div>
    <h3 class="mt-1 text-lg font-medium text-gray-900">{{ artist.artistName }}</h3>
    <div class="text-sm text-gray-400">
            {% for category in artist.categories %}
            #{{ category.name }}
            {% endfor %}
    </div>
</a>