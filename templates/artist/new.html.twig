{% extends 'base.html.twig' %}

{% block title %}Créer une fiche Artiste
{% endblock %}

{% block body %}
	{# <h1>Créer une fiche Artiste</h1>
	
	    {{ include('artist/_form.html.twig') }}
	
	    <a href="{{ path('app_artist_index') }}">Retour à la liste</a> #}


	<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
		{{ form_errors(form) }}
		<div class="sm:mx-auto sm:w-full sm:max-w-sm">
			<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Créer une fiche Artiste</h2>
		</div>

		<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
			<form class="space-y-6" action="#" method="POST">

				{{ form_start(form) }}

				<div>
					<label for="{{ form.artistName.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Nom d'artiste</label>
					<div class="mt-2">
						{{ form_row(form.artistName, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ form.description.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Description</label>
					<div class="mt-2">
						{{ form_row(form.description, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ form.email.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
					<div class="mt-2">
						{{ form_row(form.email, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ form.telephone.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Téléphone</label>
					<div class="mt-2">
						{{ form_row(form.telephone, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>

				<div>
					<label for="{{ form.websiteLink.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Lien de votre site internet :</label>
					<div class="mt-2">
						{{ form_row(form.websiteLink, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ form.facebookLink.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Lien de votre site Facebook :</label>
					<div class="mt-2">
						{{ form_row(form.facebookLink, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ form.instagramLink.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Lien de votre site Instagram :</label>
					<div class="mt-2">
						{{ form_row(form.instagramLink, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div class="mt-10 space-y-10">
					<fieldset>
						<legend class="text-sm font-semibold leading-6 text-gray-900">Catégories:</legend>
						<div class="mt-2 space-y-2">
								{{ form_row(form.categories, {'attr': {'class': 'block w-full rounded-md border-0 mr-2 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
						</div>
					</fieldset>
				</div>
                <div class="mt-10 space-y-10">
					<fieldset>
						<legend class="text-sm font-semibold leading-6 text-gray-900">Evénements participés:</legend>
						<div class="mt-2 space-y-2">
								{{ form_row(form.events, {'attr': {'class': 'block w-full rounded-md border-0 mr-2 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
						</div>
					</fieldset>
				</div>
                <div>
					<label for="{{ form.favoriteImage.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Image pour profil de l'artiste :</label>
					<div class="mt-2">
						{{ form_row(form.favoriteImage, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>

				{# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}
				<div>
					<button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Valider</button>
				</div>
				{{ form_end(form) }}
			</form>
		</div>
	</div>

{% endblock %}
