{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">{{ category.name }}</a>

                </td>
                <td>
                    {# <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a> #}
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Créer une catégorie</a>
{% endblock %}
