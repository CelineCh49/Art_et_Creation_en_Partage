{% extends 'base.html.twig' %}

{% block title %}Créer une catégorie{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
		{{ form_errors(form) }}
		<div class="sm:mx-auto sm:w-full sm:max-w-sm">
			<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Créer une catégorie</h2>
		</div>

		<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
			<form class="space-y-6" action="#" method="POST">

				{{ form_start(form) }}

				<div>
					<label for="{{ form.name.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Nom</label>
					<div class="mt-2">
						{{ form_row(form.name, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
							
				<div>
					<button type="submit" class="flex w-full justify-center rounded-md bg-teal-900 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600">Valider</button>
				</div>
				{{ form_end(form) }}
			</form>
            <div class="mt-4">
             <a href="{{ path('app_category_index')  }}" class="underline hover:text-teal-800">Retour aux catégories</a>
            </div>
           
		</div>
	</div>
{% endblock %}
