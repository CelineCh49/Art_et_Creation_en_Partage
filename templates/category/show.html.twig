{% extends 'base.html.twig' %}

{% block title %}Categorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>Categorie {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Catégorie : </th>
                <td>{{ category.name }}</td>
            </tr>
             <tr>
                <th>Artistes : </th>
                <td>
                {% for artist in category.artists %}
                   <a href="{{ path('app_artist_show', {'id': artist.id}) }}">{{ artist.artistName }}</a> 
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">Liste des catégories</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
