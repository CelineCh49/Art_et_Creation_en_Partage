{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}

	<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
		
		<div class="sm:mx-auto sm:w-full sm:max-w-sm">
			{# <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=teal&shade=600" alt="Art et création en partage"> #}
			<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Inscription</h2>
		</div>

		<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
			<form class="space-y-6" action="#" method="POST">

				{{ form_start(registrationForm) }}
				{{ form_errors(registrationForm) }}
				<div>
					<label for="{{ registrationForm.firstName.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Prénom</label>
					<div class="mt-2">
						{{ form_row(registrationForm.firstName, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ registrationForm.lastName.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Nom</label>
					<div class="mt-2">
						{{ form_row(registrationForm.lastName, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ registrationForm.telephone.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Téléphone</label>
					<div class="mt-2">
						{{ form_row(registrationForm.telephone, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
					<div class="mt-2">
						{{ form_row(registrationForm.email, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>
				<div>
					<label for="{{ registrationForm.password.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Mot de passe</label>
					<div class="mt-2">
						{{ form_row(registrationForm.password, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6 pl-2'}, 'label': false}) }}
					</div>
				</div>

				<div>
					<button type="submit" class="flex w-full justify-center rounded-md bg-teal-900 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600">Valider</button>
				</div>
				{{ form_end(registrationForm) }}
			</form>
		</div>
	</div>

{% endblock %}
