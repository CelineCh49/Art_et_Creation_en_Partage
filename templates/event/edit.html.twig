{% extends 'base.html.twig' %}

{% block title %}Modifier un événement{% endblock %}

{% block body %}
    <h1>Modifier un événement</h1>

    {{ include('event/_form.html.twig', {'button_label': 'Modifier'}) }}

		<div>Photo mise en avant:
		<img src="{{asset('assets/uploads/event_img/'~ event.favoriteImage)}}" alt="Image favorite " height="150">
		</div>

    	<div>Toutes les photos de l'événement:</div>

		{% for image in event.eventImages %}
			<div>
				<img src="{{asset('assets/uploads/event_img/'~ image.fileName)}}" alt="Image {{image.fileName}}" height="150">
				{{ include('event/_delete_image_form.html.twig') }}
				{# <a href="{{path('app_artist_delete_image', {'id':image.id}) }}"
				            data-delete data-token = "{{ csrf_token('delete'~ image.id) }}">Supprimer</a> #}
			</div>
		{% endfor %}

		<a href="{{ path('app_event_show', {'id': event.id}) }}">Retour sur l'événement</a>


    <a href="{{ path('app_event_index') }}">Voir tous les événements</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
