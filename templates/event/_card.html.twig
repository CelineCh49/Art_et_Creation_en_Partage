<a href="{{path ('app_event_show', {'id':event.id})}}" title='{{event.name}}' class="group">
        <div class="h-[280px] w-full overflow-hidden rounded-lg bg-gray-200 ">
          <img src="{{asset('assets/uploads/event_img/'~ event.favoriteImage)}}" alt="Image favorite" class="h-full w-full object-cover object-center group-hover:opacity-75">
        </div>
        <p class="mt-4 text-sm text-gray-700">Du {{ event.openingDate|date('d/m/Y')}} au {{ event.closingDate|date('d/m/Y')}}</p>
        <h3 class="mt-1 text-lg font-bold text-gray-900">{{ event.name}}</h3>
        <p class="mt-4 text-sm text-gray-700 line-clamp-3">{{event.description}}</p>
</a>