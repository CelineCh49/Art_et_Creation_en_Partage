{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block body %}
    <h1>{{ event.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date d'ouverture</th>
                <td>{{ event.openingDate|date('d/m/Y')  }}</td>
            </tr>
            <tr>
                <th>Date de fermeture</th>
                <td>{{ event.closingDate|date('d/m/Y')  }}</td>
            </tr>
            <tr>
                <th>Horaires</th>
                <td>{{ event.schedule  }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Site internet</th>
                <td>{{ event.websiteLink }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ event.facebookLink }}</td>
            </tr>
            <tr>
                <th>Instagram</th>
                <td>{{ event.instagramLink }}</td>
            </tr>
            <tr>
                <th>Artistes</th>
                <td>
                {% for artist in event.artists %}
                   <a href="{{ path('app_artist_show', {'id': artist.id}) }}">{{ artist.artistName }}</a> 
                {% endfor %}  
                </td>
            </tr>
             <tr>
                <th>Images</th>
                <td>{% for image in event.eventImages %}
                <img src="{{asset('assets/uploads/event_img/'~ image.fileName)}}" alt="{{image.fileName}}" height="150">
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">Voir tous les événements</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
